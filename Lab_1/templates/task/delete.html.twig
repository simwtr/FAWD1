{# templates/task/delete.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Подтверждение удаления задачи{% endblock %}

{% block body %}
    <h1>Подтверждение удаления задачи</h1>
    <p>Вы уверены, что хотите удалить задачу "{{ task.title }}"?</p>
    <form method="post" action="{{ path('task_delete', {'id': task.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">Да, удалить</button>
        <a href="{{ path('task_view', {'id': task.id}) }}" class="btn btn-secondary">Отмена</a>
    </form>
{% endblock %}
