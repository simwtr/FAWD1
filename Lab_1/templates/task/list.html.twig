{# templates/task/list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Список задач{% endblock %}

{% block body %}
    <h1>Список задач</h1>
    <table>
        <thead>
            <tr>
                <th>Заголовок</th>
                <th>Дата и время создания</th>
                <th>Срок выполнения</th>
                <th>Категория</th>
                <th>Изменить</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr>
                    <td><a href="{{ path('task_view', {'id': task.id}) }}">{{ task.title }}</a></td>
                    <td>{{ task.createdAt|date('d/m/Y H:i') }}</td>
                    <td>{{ task.dueDate|date('d/m/Y H:i') }}</td>
                    <td>{{ task.category.name }}</td>
                    <td><a href="{{ path('task_update', {'id': task.id}) }}">Редактировать</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <p><a href="{{ path('task_create') }}">Создать задачу</a></p>
{% endblock %}
