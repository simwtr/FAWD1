{# templates/task/view.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Просмотр задачи: {{ task.title }}{% endblock %}

{% block body %}
    <h1>Задача: {{ task.title }}</h1>
    <p><strong>Описание:</strong></p>
    <p>{{ task.description }}</p>
    <p><strong>Срок выполнения:</strong> {{ task.dueDate|date('d/m/Y H:i') }}</p>
    <p><strong>Категория:</strong> {{ task.category.name }}</p>
    
    <form method="post" action="{{ path('task_delete', {'id': task.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить эту задачу?');">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">Удалить задачу</button>
    </form>
    
    <p><a href="{{ path('task_list') }}">Вернуться к списку задач</a></p>
{% endblock %}
